{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourceGroupName": {
      "type": "string",
      "defaultValue": "RemoteWorkAssistant20201208ResourceGroup",
      "metadata": {
        "_parameterType": "resourceGroup",
        "description": "このリソースのリソース グループの名前。追跡機能を向上させるため、同じリソース グループにリソースを配置することをお勧めします。"
      }
    },
    "resourceGroupLocation": {
      "type": "string",
      "defaultValue": "japaneast",
      "metadata": {
        "_parameterType": "location",
        "description": "リソース グループの場所。リソース グループには、リソースとは異なる場所を指定できます。"
      }
    },
    "resourceLocation": {
      "type": "string",
      "defaultValue": "[parameters('resourceGroupLocation')]",
      "metadata": {
        "_parameterType": "location",
        "description": "リソースの場所。既定では、リソース グループの場所が使用されます (リソース プロバイダーがその場所でサポートされていない場合を除く)。"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "name": "[parameters('resourceGroupName')]",
      "location": "[parameters('resourceGroupLocation')]",
      "apiVersion": "2019-10-01"
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "[concat(parameters('resourceGroupName'), 'Deployment', uniqueString(concat('RWAServerAzureKeyVault', subscription().subscriptionId)))]",
      "resourceGroup": "[parameters('resourceGroupName')]",
      "apiVersion": "2019-10-01",
      "dependsOn": [
        "[parameters('resourceGroupName')]"
      ],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "name": "RWAServerAzureKeyVault",
              "type": "Microsoft.KeyVault/vaults",
              "location": "[parameters('resourceLocation')]",
              "properties": {
                "sku": {
                  "family": "A",
                  "name": "Standard"
                },
                "tenantId": "b979a18e-7245-4535-b885-311922c97b6e",
                "accessPolicies": [],
                "enabledForDeployment": true,
                "enabledForDiskEncryption": true,
                "enabledForTemplateDeployment": true
              },
              "apiVersion": "2016-10-01"
            }
          ]
        }
      }
    }
  ],
  "metadata": {
    "_dependencyType": "secrets.keyVault"
  }
}